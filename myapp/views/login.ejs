<!DOCTYPE html>
<html lang="es">

<head>
    <!-- Configuración del juego de caracteres y la escala de la vista -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Enlaces a hojas de estilo externas -->
    <link rel="stylesheet" type="text/css" href="/stylesheets/login.css">
    <link rel="stylesheet" type="text/css" href="/stylesheets/home.css">
    <!-- Enlace a la hoja de estilo de Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <!-- Enlace a la hoja de estilos de Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <!-- Título de la página y favicon -->
    <title>UCM | Login</title>
    <link rel="icon" href="/images/icon.png" type="image/x-icon">
</head>

<body class="bg-light">
    <!-- Contenido principal -->
    <main class="main-fondo">
        <!-- Contenedor principal -->
        <div class="container">
            <!-- Columna con bordes y sombras -->
            <div class="col-md-6 border border-1 border-dark">
                <!-- Tarjeta para el formulario -->
                <div class="card">
                    <!-- Cuerpo de la tarjeta -->
                    <div class="card-body">
                        <!-- Título del formulario -->
                        <h5 class="card-title text-center">Iniciar Sesión</h5>
                        <!-- Formulario de inicio de sesión -->
                        <form action="/InicioSesion" method="POST">
                            <!-- Lógica para mostrar mensajes de error -->
                            <% if (mensaje==null) { %>
                                <!-- Sin mensaje -->
                            <% } else if(mensaje) { %>
                                <!-- Mensaje de error -->
                                <div class="alert alert-danger bg-gradient text-dark" role="alert">
                                    <%= mensaje %>
                                </div>
                            <% } %>
                            <!-- Campo de entrada para el correo electrónico -->
                            <div class="mb-3">
                                <label for="email" class="form-label">Correo Electrónico</label>
                                <input type="text" class="form-control" id="email" name="email" required>
                            </div>
                            <!-- Campo de entrada para la contraseña -->
                            <div class="mb-3">
                                <label for="password" class="form-label me-2">Contraseña</label>
                                <!-- Agrupación de entrada de contraseña con botón para mostrar/ocultar -->
                                <div class="d-flex">
                                    <input type="password" class="form-control me-2" id="password" name="password" required>
                                    <button type="button" class="btn btn-outline-dark" id="showPasswordBtn" onclick="togglePassword('password', 'showPasswordBtn')">Mostrar</button>
                                </div>
                            </div>
                            <!-- Botón de inicio de sesión -->
                            <div class="d-grid">
                                <button type="submit" class="btn btn-dark">Iniciar Sesión</button>
                            </div>
                        </form>
                        <!-- Enlace para registrarse -->
                        <div class="text-center">
                            <p>¿No tienes cuenta? <a href="/registro">Regístrate</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <!-- Scripts de JavaScript -->
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="/javascripts/registro.js"></script>
</body>

</html>
